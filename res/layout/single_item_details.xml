<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

<TextView
        android:id="@+id/deviceName"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

<TextView
        android:id="@+id/deviceBondState"
        android:layout_below="@+id/deviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="10dp"/>

<TextView
        android:id="@+id/deviceClass"
        android:layout_below="@+id/deviceBondState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="10dp"/>

<TextView
        android:id="@+id/deviceAddress"
        android:layout_below="@+id/deviceClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="10dp"/>

<TextView
        android:id="@+id/deviceUUID"
        android:layout_below="@+id/deviceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="10dp"/>

<TextView
        android:id="@+id/deviceConnection"
        android:layout_below="@+id/deviceUUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:padding="10dp"/>


<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connectButton"
        android:text="@string/connectButtonText"
        android:layout_above="@+id/disconnectButton"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        />

<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disconnectButton"
        android:text="@string/disconnectButtonText"
        android:layout_above="@+id/doneButton"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

<Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/doneButton"
        android:text="@string/doneButtonText"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>